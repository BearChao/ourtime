<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.zynick.ourtime.ourtime.AddActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事件名称"
        android:textSize="16dp"
        android:id="@+id/tv_eventname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_eventname"
        android:hint="请输入事件名称"
        android:id="@+id/edt_eventname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发生时间"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        android:layout_below="@+id/edt_eventname"
        android:layout_alignLeft="@+id/tv_eventname"
        android:layout_alignStart="@+id/tv_eventname"
        android:id="@+id/tv_eventtime" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入发生的时间"
        android:layout_below="@+id/tv_eventtime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重复"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        android:id="@+id/cb_loop"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="添加"
        android:id="@+id/btn_add_event_confirm"
        android:layout_toRightOf="@+id/tv_eventtime"
        android:layout_toEndOf="@+id/tv_eventtime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/btn_add_event_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tv_eventtime"
        android:layout_toStartOf="@+id/tv_eventtime" />

</RelativeLayout>
